                                    <VBox.margin>
                                        <Insets left="45.0" top="15.0"/>
                                    </VBox.margin>
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </Button>
                                <Separator maxWidth="300.0" prefWidth="200.0">
                                    <VBox.margin>
                                        <Insets left="120.0" top="32.0"/>
