<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" xmlns="http://javafx.com/javafx/19"
            fx:controller="controller.playlist.PlaylistView">
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #CDCDFA;">
                            <children>
                                <ImageView fx:id="playlistIMG" fitHeight="225.0" fitWidth="220.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../image/pinkPlaylist.png"/>
                                    </image>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </ImageView>
                                <VBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="playlistTitle" prefHeight="46.0" prefWidth="799.0"
                                               style="-fx-background-color: null;" styleClass="primary-color"
                                               text="Title">
                                            <font>
                                                <Font name="CircularStd-Medium" size="36.0"/>
                                            </font>
                                            <VBox.margin>
                                                <Insets bottom="10.0"/>
                                            </VBox.margin>
                                        </Label>
                                    </children>
                                    <HBox.margin>
                                        <Insets left="15.0"/>
                                    </HBox.margin>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="15.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                            <children>
                                <GridPane prefHeight="0.0" prefWidth="874.0">
                                    <HBox.margin>
                                        <Insets top="6.0"/>
                                    </HBox.margin>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label prefHeight="15.0" prefWidth="353.0" styleClass="primary-color"
                                               text="#TITLE" textFill="#0000007d">
                                            <font>
                                                <Font size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label layoutX="10.0" layoutY="10.0" prefHeight="15.0" prefWidth="170.0"
                                               styleClass="primary-color" text="CATEGORY" textFill="#0000007d"
                                               GridPane.columnIndex="1">
                                            <font>
                                                <Font size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label layoutX="10.0" layoutY="10.0" prefHeight="15.0" prefWidth="93.0"
                                               styleClass="primary-color" text="DURATION" textFill="#0000007d"
                                               GridPane.columnIndex="2">
                                            <font>
                                                <Font size="12.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </GridPane>
                            </children>
                        </HBox>
                        <Separator VBox.vgrow="ALWAYS"/>
                        <VBox fx:id="podcastContainer" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="24.0" right="24.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <top>
        <VBox minHeight="-Infinity" minWidth="-Infinity" styleClass="primary-color" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="24.0" right="24.0"/>
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0">
                    <children>
                        <Label prefHeight="7.0" prefWidth="133.0" styleClass="primary-color" text="Playlist">
                            <font>
                                <Font name="CircularStd-Medium" size="18.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="5.0" top="6.0"/>
                            </HBox.margin>
                        </Label>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="83.0">
                            <children>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../image/Chevron_Left.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../image/Chevron_Right.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <Separator prefWidth="200.0"/>
            </children>
        </VBox>
    </top>
</BorderPane>
