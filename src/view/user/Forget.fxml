                                </ImageView>
                                <ImageView fitHeight="27.0" fitWidth="22.0" layoutX="207.0" layoutY="462.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../image/gg_music.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </AnchorPane>
                        <Separator maxWidth="1.0" minWidth="1.0" orientation="VERTICAL" prefWidth="1.0"
                                   style="-fx-background-color: #5d5fef;"/>
                        <VBox prefHeight="531.0" prefWidth="580.0">
                            <children>
                                <Label alignment="CENTER" prefHeight="37.0" prefWidth="582.0" text="Forgot Password"
                                       textFill="#5d5fef">
                                    <font>
                                        <Font name="System Bold" size="24.0"/>
                                    </font>
                                    <padding>
                                        <Insets right="30.0"/>
                                    </padding>
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <Label alignment="CENTER" prefHeight="13.0" prefWidth="145.0" styleClass="primary-color"
                                       text="Email">
                                    <VBox.margin>
                                        <Insets top="30.0"/>
                                    </VBox.margin>
                                    <padding>
                                        <Insets right="70.0"/>
                                    </padding>
                                </Label>
                                <AnchorPane prefHeight="39.2">
                                    <VBox.margin>
                                        <Insets left="22.0" right="55.0"/>
                                    </VBox.margin>
                                    <children>
                                        <TextField fx:id="tf_Email" prefHeight="39.0" prefWidth="500.0"/>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefHeight="39.2">
                                    <VBox.margin>
                                        <Insets left="22.0" right="55.0"/>
                                    </VBox.margin>
                                </AnchorPane>
                                <HBox>
                                    <VBox.margin>
                                        <Insets left="22.0" top="5.0"/>
                                    </VBox.margin>
                                </HBox>
