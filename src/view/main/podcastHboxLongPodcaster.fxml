<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="hBoxPodcast" alignment="CENTER_LEFT" fillHeight="false"
      onMouseEntered="#showPlayButton" onMouseExited="#hidePlayButton" prefHeight="60.0"
      prefWidth="1700.0" style="-fx-background-radius: 8px; -fx-background-color: #F8F8F8FF;"
      stylesheets="@../../css/podcastHboxLong.css" xmlns="http://javafx.com/javafx/19"
      fx:controller="controller.main.PodcastHboxLongPodcasterController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="359.0" spacing="12.0">
            <children>
                <AnchorPane>
                    <children>
                        <ImageView fx:id="imgHboxLongPodcaster" fitHeight="50.0" fitWidth="50.0" layoutY="5.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../image/Podcast_EP-10-web_1.png"/>
                            </image>
                        </ImageView>
                        <Button fx:id="playButtonVBox" alignment="CENTER" contentDisplay="CENTER" disable="true"
                                layoutY="5.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="50.0"
                                minWidth="50.0" mnemonicParsing="false" onMouseClicked="#setDataToMediaPlayer"
                                prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;"
                                visible="false">
                            <graphic>
                                <ImageView fx:id="playImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                           preserveRatio="true" scaleX="0.5" scaleY="0.5">
                                    <image>
                                        <Image url="@../../image/play.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                    </children>
                </AnchorPane>
                <VBox alignment="CENTER_LEFT" prefHeight="81.0" prefWidth="334.0" spacing="7.0">
                    <children>
                        <Label fx:id="titleHboxLongPodcaster" text="Tok Touch Episode 0 - ទំលាប់កែមិនឡើង?">
                            <font>
                                <Font name="Rockwell" size="14.0"/>
                            </font>
                        </Label>
                        <Label fx:id="datePostHboxLongPodcaster" text="23 JUN 2022" textAlignment="JUSTIFY"
                               textFill="#9e9ba1" wrapText="true">
                            <font>
                                <Font name="Rockwell" size="13.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="DEFAULT"/>
                            </cursor>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="3.0" top="3.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        <Label fx:id="genreHboxLongPodcaster" prefHeight="20.0" prefWidth="150.0" text="Education">
            <font>
                <Font name="Rockwell" size="14.0"/>
            </font>
        </Label>
        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        <Label fx:id="durationHboxLongPodcaster" alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="120.0"
               text="1h 45 min">
            <font>
                <Font name="Rockwell" size="14.0"/>
            </font>
        </Label>
        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="83.0">
            <children>
                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../image/Heart_01.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../image/more.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets left="8.0" right="33.0"/>
    </padding>
</HBox>
