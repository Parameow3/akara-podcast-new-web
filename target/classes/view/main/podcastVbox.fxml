<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="parentPodCast" onMouseEntered="#showPlayButton" onMouseExited="#hidePlayButton"
            prefWidth="140.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="controller.main.PodcastVboxController">
    <children>
        <VBox fx:id="vBoxPodcast" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="226.0" prefWidth="173.0" spacing="2.0"
              style="-fx-background-color: #EDEDED; -fx-background-radius: 8px;" stylesheets="@../../css/style.css">
            <children>
                <ImageView fx:id="imgVbox" fitHeight="176.0" fitWidth="173.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../image/ScreenShot2021-12-07at14.271.png"/>
                    </image>
                </ImageView>
                <Label fx:id="titleVbox" ellipsisString="" lineSpacing="0.5" maxHeight="41.0" maxWidth="155.0"
                       prefWidth="173.0" text="កម្មវិធីតោះនិយាយប្រវត្តិជាមួយនឹងហេ្គម" textFill="#323232"
                       wrapText="true">
                    <font>
                        <Font name="Rockwell" size="14.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="9.0" right="9.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
        <Button fx:id="playButtonVBox" disable="true" layoutX="51.0" layoutY="56.0" mnemonicParsing="false"
                onMouseClicked="#setDataToMediaPlayer" style="-fx-background-color: transparent;" visible="false">
            <graphic>
                <ImageView fx:id="playImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../image/play.png"/>
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Label fx:id="podcasterVbox" text="Label" visible="false"/>
        <Label fx:id="genreVbox" layoutY="40.0" text="Label" visible="false"/>
        <Label fx:id="durationVbox" layoutY="20.0" text="Label" visible="false"/>
    </children>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
</AnchorPane>
