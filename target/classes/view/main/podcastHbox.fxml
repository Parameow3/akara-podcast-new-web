<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="hBoxPodcast" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" onMouseEntered="#showPlayButton" onMouseExited="#hidePlayButton" prefHeight="80.0"
      prefWidth="351.0" spacing="10.0"
      style="-fx-background-radius: 8px; -fx-background-color: #F8F8F8FF;" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/19"
      fx:controller="controller.main.PodcastHboxController">
    <children>
        <AnchorPane>
            <children>
                <ImageView fx:id="img" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../image/Podcast_EP-10-web_1.png"/>
                    </image>
                </ImageView>
                <Button fx:id="playButtonVBox" alignment="CENTER" contentDisplay="CENTER" disable="true" layoutX="2.0"
                        layoutY="6.0" mnemonicParsing="false" onMouseClicked="#setDataToMediaPlayer"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="playImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                   preserveRatio="true" scaleX="0.7" scaleY="0.7">
                            <image>
                                <Image url="@../../image/play.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
        </AnchorPane>
        <VBox prefHeight="81.0" prefWidth="272.0" spacing="9.0">
            <children>
                <Label fx:id="title" text="Tok Touch Episode 0 - ទំលាប់កែមិនឡើង?" textFill="#323232">
                    <font>
                        <Font name="Rockwell" size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="description"
                       text="តេស្តលេងៗហ្នឹងហារ អ្នកទាំងអស់គ្នាគិតយ៉ាងម៊ិចចំពោះ Podcast សាកល្បងមួយនេះ?"
                       textAlignment="JUSTIFY" textFill="#9e9ba1" wrapText="true">
                    <font>
                        <Font name="Rockwell" size="12.0"/>
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="3.0" top="3.0"/>
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
</HBox>
